<!-- app/views/analyze/controls/_sublease.html.erb -->
<div class="fee-control">
  <label>
    <input type="checkbox" data-property-analyzer-target="managementFeeEnabled" data-action="change->property-analyzer#updateCalculations">
    Management Fee:
  </label>
  <input 
    type="number" 
    data-property-analyzer-target="managementFeePercent"
    data-action="change->property-analyzer#updateCalculations"
    min="0" max="100" step="0.5" value="10" disabled
  >
  <span style="color: #9ca3af;">%</span>
</div>

<div class="fee-control">
  <label>
    <input type="checkbox" data-property-analyzer-target="chillerFreeEnabled" data-action="change->property-analyzer#updateCalculations">
    Chiller Free
  </label>
  <span style="color: #9ca3af; margin-left: 0.5rem;">(reduces utilities to 9 AED/sqft vs 18 AED/sqft)</span>
</div>